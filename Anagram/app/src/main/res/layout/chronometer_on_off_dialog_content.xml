<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

    <CheckBox
        android:id="@+id/off"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/off"
        android:button="@null"
        android:textColor="@color/editTextColor"
        android:drawableRight="@drawable/check_box_selector"
        android:layout_marginLeft="20dp"
        android:padding="5dp" />



    <RelativeLayout
        android:id="@+id/contentChronometerDialogRl"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below = "@id/off"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/editTextColor"
            android:textSize="15sp"
            android:text="@string/on"/>
        <ImageView
            android:id="@+id/threeDotsIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/three_dots"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>

    <View
        android:id="@+id/onOffAndTimeSeparator"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@id/threeDotsIv"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <CheckBox
        android:id="@+id/tenSecondsTimerCheckBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentChronometerDialogRl"
        android:text="10s"
        android:button="@null"
        android:textColor="@color/editTextColor"
        android:drawableRight="@drawable/check_box_selector"
        android:layout_marginLeft="25dp"
        android:padding="5dp" />

    <View
        android:id="@+id/timeSeparator"
        android:layout_width="match_parent"
        android:layout_below="@id/threeDotsIv"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <CheckBox
        android:id="@+id/twenty_fiveSecondsTimerCheckBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tenSecondsTimerCheckBox"
        android:text="25s"
        android:button="@null"
        android:textColor="@color/editTextColor"
        android:drawableRight="@drawable/check_box_selector"
        android:layout_marginLeft="25dp"
        android:padding="5dp" />

    <View
        android:id="@+id/endSeparator"
        android:layout_width="match_parent"
        android:layout_below="@id/threeDotsIv"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    </LinearLayout>
</LinearLayout>